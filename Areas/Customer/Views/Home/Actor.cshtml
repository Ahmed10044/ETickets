@model Actor


<!-- Actor Details -->
<section id="actor-details" class="p-8 rounded-2xl bg-gray-900/70 shadow-2xl max-w-3xl mx-auto">
    <!-- Top Info -->
    <div class="flex flex-col md:flex-row items-center md:items-start gap-8">

        <!-- Profile Picture -->
        <div class="flex-shrink-0">
            <img src="~/images/cast/@Model.ProfilePicture"
                 alt="Actor Name"
                 class="w-44 h-44 object-cover rounded-2xl shadow-lg border-4 border-gray-800 hover:scale-105 transition" />
        </div>

        <!-- Actor Info -->
        <div class="flex flex-col text-center md:text-left">
            <h1 class="text-3xl font-bold text-white tracking-wide">
                @Model.FirstName <span class="text-indigo-400">@Model.LastName</span>
            </h1>
            <p class="mt-4 text-gray-300 leading-relaxed max-w-xl">
                @Model.Bio.
            </p>
        </div>
    </div>

    <!-- Divider -->
    <div class="my-8 border-t border-gray-700"></div>

    <!-- News -->
    <div>
        <h2 class="text-xl font-semibold text-white mb-3">📰 Latest News</h2>
        <p class="text-gray-300 bg-gray-800/70 p-4 rounded-xl leading-relaxed">
            @Model.News.
        </p>
    </div>
</section>
