@using ETickets.ViewModel
@model MovieAndMovieActorsVM



<body>

    <div class="container my-5">
        <div class="card movie-card">
            <div class="row g-0">

                <!-- Left: Carousel -->
                <div class="col-md-5 poster-col">
                    <div id="movieCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/images/movies/@Model.Movie.ImgUrl" class="d-block w-100" alt="Movie Poster 1">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/movies/@Model.Movie.ImgUrl" class="d-block w-100" alt="Movie Poster 2">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/movies/@Model.Movie.ImgUrl" class="d-block w-100" alt="Movie Poster 3">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                </div>

                <!-- Right: Movie Details -->
                <div class="col-md-7">
                    <div class="card-body p-3 bg-black movie-info">

                        <!-- Title + Availability -->
                        <div class="d-flex align-items-center mb-3">
                            <h2 class=" card-title me-3 ">Venom: Let There Be Carnage</h2>
                            @if (Model.Movie.MovieStatus == MovieStatus.Expired)
                            {
                                <span class="badge availability">@Model.Movie.MovieStatus</span>

                            }
                            else
                            {
                                <span class="badge availability">@Model.Movie.MovieStatus</span>

                            }
                        </div>

                        <p class="description">
                            @Model.Movie.Description
                        </p>

                        <ul class="list-unstyled movie-meta">
                            <li><strong>🎟️ Price:</strong> @Model.Movie.Price</li>
                            <li><strong>🏛️ Cinema:</strong> @Model.Movie.cinema.Name</li>
                            <li><strong>📅 Start Date:</strong> @Model.Movie.StartDate</li>
                            <li><strong>📅 End Date:</strong> @Model.Movie.EndDate</li>
                            <li><strong>📂 Category:</strong> @Model.Movie.category.Name</li>
                        </ul>
                        
                        <!-- Actors -->
                        @foreach(var item in Model.ActorMovies)
                        {
                            <div class="d-flex actors mb-4">
                                <a href="/Customer/home/Actor/@item.Actor.Id"> 
                                    <img src="~/images/cast/@item.Actor.ProfilePicture"
                                         
                                         class="rounded shadow border border-dark" />
                                </a>
                            </div>

                            
                        }

                        <!-- Trailer -->
                        <div class="ratio ratio-16x9 mb-4">
                            <iframe src="@Model.Movie.TrailerUrl" title="Trailer" allowfullscreen></iframe>
                        </div>

                        <!-- Book Ticket Button -->
                        @if (Model.Movie.MovieStatus == MovieStatus.Expired)
                            {
                              <button class="btn book-btn" disabled >🎫 Book Ticket Now</button>
                              
                                
                            }
                            else
                            {
                             
                              <button class="btn book-btn"  >🎫 Book Ticket Now</button>
                                
                            }
                    </div>
                </div>

            </div>
        </div>
    </div>

    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script> *@
</body>