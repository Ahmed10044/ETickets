
@model Actor

<!-- Actor Form -->
<section id="actor-form" class="p-6 rounded-2xl bg-gray-900/70 shadow-xl max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
        <h2 class="font-semibold text-xl text-white">🎭 Add Actor</h2>
    </div>

    <!-- Form -->
    <form method="post" class="space-y-5">
        <!-- First Name -->
        <div>
            <label class="block text-sm text-gray-300 mb-1">First Name</label>
            <input type="text" placeholder="Enter first name"
                   class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white border border-gray-700
                       focus:border-indigo-500 focus:ring focus:ring-indigo-500/50" name="FirstName" />
            <span class="text-danger" asp-validation-for="@Model.FirstName"></span>

        </div>

        <!-- Last Name -->
        <div>
            <label class="block text-sm text-gray-300 mb-1">Last Name</label>
            <input type="text" placeholder="Enter last name"
                   class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white border border-gray-700
                       focus:border-indigo-500 focus:ring focus:ring-indigo-500/50" name="LastName" />
            <span class="text-danger" asp-validation-for="@Model.LastName"></span>

        </div>

        <!-- Profile Picture Upload -->
        <div>
            <label class="block text-sm text-gray-300 mb-1">Profile Picture</label>
            <input type="text"
                   class="w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4
                       file:rounded-lg file:border-0
                       file:text-sm file:font-semibold
                       file:bg-indigo-600 file:text-white
                       hover:file:bg-indigo-700" name="ProfilePicture" />
            <span class="text-danger" asp-validation-for="@Model.ProfilePicture"></span>

        </div>

        <!-- Bio -->
        <div>
            <label class="block text-sm text-gray-300 mb-1">Bio</label>
            <textarea rows="3" placeholder="Enter short biography"
                      class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white border border-gray-700
                       focus:border-indigo-500 focus:ring focus:ring-indigo-500/50" name="Bio"></textarea>
            <span class="text-danger" asp-validation-for="@Model.Bio"></span>

        </div>

        <!-- News -->
        <div>
            <label class="block text-sm text-gray-300 mb-1">News</label>
            <textarea rows="2" placeholder="Enter latest news"
                      class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white border border-gray-700
                       focus:border-indigo-500 focus:ring focus:ring-indigo-500/50" name="News"></textarea>
            <span class="text-danger" asp-validation-for="@Model.News"></span>

        </div>

        <!-- Buttons -->
        <div class="flex justify-end gap-3">
            <button type="reset"
                    class="px-4 py-2 rounded-lg bg-gray-600 text-white hover:bg-gray-500 transition">
                Cancel
            </button>
            <button type="submit"
                    class="px-4 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700 transition">
                Save Actor
            </button>
        </div>
    </form>
</section>
