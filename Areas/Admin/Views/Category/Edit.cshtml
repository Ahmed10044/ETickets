@model Category

<div class="max-w-lg mx-auto bg-gray-800 shadow-lg rounded-2xl p-6 text-gray-100">
    <h3 class="text-2xl font-bold text-center text-indigo-400 mb-6">Create New Category</h3>

    <form method="post" class="space-y-4">

        <!-- Category Name -->
        <div>
            <label for="Name" class="block text-sm font-medium mb-1">Category Name</label>
            <input type="text" id="Name" required
                   placeholder="Enter category name"
                   class="w-full rounded-xl bg-gray-700 border border-gray-600 focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 text-gray-100 placeholder-gray-400"
                   name="Name" value="@Model.Name" />

        </div>



        <!-- Submit -->
        <div>
            <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-xl p-2 transition">
                Edit Category
            </button>
        </div>

    </form>
</div>